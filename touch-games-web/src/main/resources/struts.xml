<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
	"http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!-- O TWF Ã© um framework da Touch que adiciona novas funcionalidades ao struts -->
	<include file="twf-default.xml"/>
	
	<constant name="struts.multipart.parser" value="br.com.touchtec.twf.core.MonitoredMultiPartRequest"/>
	
	<package name="default" extends="twf-default">
		<interceptors>
			<interceptor name="navigation" class="br.com.touchtec.games.web.controller.NavigationInterceptor" />
		</interceptors>
		
		<action name="*" class="br.com.touchtec.games.web.controller.{1}Action">
			<interceptor-ref name="navigation" />
			<interceptor-ref name="twfDefaultStack" />
		</action>
	</package>
	
	<package name="struts" namespace="/struts" extends="twf-default">
		<action name="Hello" class="br.com.touchtec.games.web.struts.HelloAction">
			<result>/jsp/struts/Hello.jsp</result>
		</action>
		
		<action name="Desenvolvedoras" class="br.com.touchtec.games.web.struts.DesenvolvedorasAction">
			<result>/jsp/struts/Desenvolvedoras.jsp</result>
		</action>
		
		<action name="Jogos" class="br.com.touchtec.games.web.struts.JogosAction">
			<result>/jsp/struts/Jogos.jsp</result>
		</action>
	</package>
</struts>
